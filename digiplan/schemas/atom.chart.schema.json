{
  "$id": "https://wam.rl-institut.de/digiplan/schemas/atom.chart.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "description": "Atom Chart Schema. This schema is to be referenced by other schemas",
  "properties": {
    "chartType": {
      "description": "The chart type that shall be used. If no chart shall be used, set value to (JSON type) null. Also look at following source for more info on chart types: https://echarts.apache.org/en/option.html#series",
      "enum": [
        "line",
        "bar",
        "pie",
        "scatter",
        "effectScatter",
        "radar",
        "tree",
        "treemap",
        "sunburst",
        "boxplot",
        "candlestick",
        "heatmap",
        "map",
        "parallel",
        "lines",
        "graph",
        "sankey",
        "funnel",
        "gauge",
        "pictorialBar",
        "themeRiver",
        "custom"
      ],
      "title": "Chart Type",
      "type": [
        "string",
        "null"
      ]
    },
    "payload": {
      "description": "A list of one or more objects",
      "items": {
        "additionalProperties": false,
        "description": "Object which itself contains a data series",
        "properties": {
          "data": {
            "additionalProperties": false,
            "description": "Data object of one entry with key value definitions and items list",
            "properties": {
              "definition": {
                "additionalProperties": false,
                "description": "Key-value definition for lookup and human-readable names",
                "properties": {
                  "key": {
                    "additionalProperties": false,
                    "description": "Key lookup and name definition",
                    "properties": {
                      "lookup": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "type": {
                        "description": "Possible types, defined by JSON Schema type names",
                        "enum": [
                          "string",
                          "number",
                          "integer",
                          "object",
                          "array",
                          "boolean",
                          "null"
                        ],
                        "type": "string"
                      }
                    },
                    "required": [
                      "lookup",
                      "name",
                      "type"
                    ],
                    "title": "Key Definition",
                    "type": "object"
                  },
                  "value": {
                    "additionalProperties": false,
                    "description": "Value lookup and name definition",
                    "properties": {
                      "lookup": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "type": {
                        "description": "Possible types, defined by JSON Schema type names",
                        "enum": [
                          "string",
                          "number",
                          "integer",
                          "object",
                          "array",
                          "boolean",
                          "null"
                        ],
                        "type": "string"
                      }
                    },
                    "required": [
                      "lookup",
                      "name",
                      "type"
                    ],
                    "title": "Value Definition",
                    "type": "object"
                  }
                },
                "required": [
                  "key",
                  "value"
                ],
                "title": "Key-Value Definition",
                "type": "object"
              },
              "series": {
                "description": "Entry data series of key-value objects",
                "items": {
                  "additionalProperties": false,
                  "description": "Key-value list item object",
                  "properties": {
                    "key": {
                      "type": [
                        "string",
                        "number",
                        "integer",
                        "object",
                        "array",
                        "boolean",
                        "null"
                      ]
                    },
                    "value": {
                      "type": [
                        "string",
                        "number",
                        "integer",
                        "object",
                        "array",
                        "boolean",
                        "null"
                      ]
                    }
                  },
                  "required": [
                    "key",
                    "value"
                  ],
                  "title": "Key-Value Item",
                  "type": "object"
                },
                "maxItems": 1000,
                "minItems": 1,
                "title": "Key-Value List",
                "type": "array"
              }
            },
            "required": [
              "definition",
              "series"
            ],
            "title": "Key-Value List",
            "type": "object"
          },
          "description": {
            "description": "User facing short description for informational purposes",
            "maxLength": 280,
            "minLength": 0,
            "title": "Description",
            "type": "string"
          },
          "id": {
            "description": "Unique ID of the entry",
            "title": "Id",
            "type": "integer"
          },
          "name": {
            "description": "Name of the entry",
            "title": "Name",
            "type": "string"
          }
        },
        "required": [
          "data",
          "description",
          "id",
          "name"
        ],
        "title": "Entry",
        "type": "object"
      },
      "maxItems": 20,
      "minItems": 1,
      "title": "Municipalities List",
      "type": "array"
    }
  },
  "required": [
    "chartType",
    "payload"
  ],
  "title": "Atom Chart",
  "type": "object"
}
