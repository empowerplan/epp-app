{
  "$id": "https://wam.rl-institut.de/digiplan/schemas/components/chart.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "description": "Chart Schema. This schema is always referenced by other schemas and can't be standalone",
  "properties": {
    "lookup": {
      "description": "Lookup names (see also static/json/names.json). If no chart shall be used, set value to (JSON type) null.",
      "type": "string"
    },
    "series": {
      "description": "Series list",
      "items": {
        "description": "Series item",
        "properties": {
          "data": {
            "description": "Series item list",
            "items": {
              "additionalProperties": false,
              "description": "Series item list item",
              "properties": {
                "key": {
                  "type": [
                    "string",
                    "number",
                    "integer",
                    "object",
                    "array",
                    "boolean",
                    "null"
                  ]
                },
                "value": {
                  "type": [
                    "string",
                    "number",
                    "integer",
                    "object",
                    "array",
                    "boolean",
                    "null"
                  ]
                }
              },
              "required": [
                "key",
                "value"
              ],
              "type": "object"
            },
            "maxItems": 1000,
            "minItems": 1,
            "type": "array"
          },
          "name": {
            "description": "Series item name",
            "type": [
              "string",
              "null"
            ]
          }
        }
      },
      "maxItems": 1000,
      "minItems": 1,
      "type": "array"
    },
    "title": {
      "description": "Title of the chart",
      "type": "string"
    }
  },
  "required": [
    "lookup",
    "series",
    "title"
  ],
  "type": "object"
}
