{
  "region-fill": {
    "type": "fill",
    "paint": {
      "fill-color": "rgb(250,174,29)",
      "fill-opacity": [
        "case",
        [
          "boolean",
          [
            "feature-state",
            "hover"
          ],
          false
        ],
        0,
        0.1
      ]
    }
  },
  "region-label": {
    "type": "symbol",
    "layout": {
      "text-field": "{name}",
      "text-letter-spacing": 0.04,
      "text-radial-offset": 2,
      "text-variable-anchor": [
        "center",
        "top"
      ]
    },
    "paint": {
      "text-color": [
        "case",
        [
          "boolean",
          [
            "feature-state",
            "hover"
          ],
          false
        ],
        "#222222",
        "#000000"
      ],
      "text-halo-blur": 1.5,
      "text-halo-color": "hsl(0, 0%, 100%)",
      "text-halo-width": 0.85
    }
  },
  "region-line": {
    "type": "line",
    "paint": {
      "line-color": "rgb(250, 174,29)",
      "line-width": [
        "case",
        [
          "boolean",
          [
            "feature-state",
            "hover"
          ],
          false
        ],
        3,
        0.25
      ]
    }
  },
  "wind": {
    "type": "symbol",
    "layout": {
      "icon-image": "wind",
      "icon-size": [
        "interpolate",
        [
          "linear"
        ],
        [
          "get",
          "unit_count"
        ],
        0,
        0.5,
        10,
        1.0,
        100,
        1.25,
        1000,
        1.5
      ],
      "icon-allow-overlap": true
    },
    "paint": {
      "icon-color": "blue"
    }
  },
  "wind_cluster": {
    "type": "circle",
    "paint": {
      "circle-color": [
        "step",
        ["get", "point_count"],
        "#51bbd6",
        100,
        "#f1f075",
        750,
        "#f28cb1"
      ],
      "circle-radius": [
        "step",
        ["get", "point_count"],
        20,
        100,
        30,
        750,
        40
      ]
    }
  },
  "wind_cluster_count": {
    "type": "symbol",
    "filter": ["has", "point_count"],
    "layout": {
      "text-field": "{point_count_abbreviated}",
      "text-font": ["DIN Offc Pro Medium", "Arial Unicode MS Bold"],
      "text-size": 12
    }
  },
  "pvroof": {
    "type": "symbol",
    "layout": {
      "icon-image": "pv",
      "icon-size": [
        "interpolate",
        [
          "linear"
        ],
        [
          "get",
          "unit_count"
        ],
        0,
        0.5,
        10,
        1.0,
        100,
        1.25,
        1000,
        1.5
      ],
      "icon-allow-overlap": true
    },
    "paint": {
      "icon-color": "yellow"
    }
  },
  "pvroof_cluster": {
    "type": "circle",
    "paint": {
      "circle-color": [
        "step",
        ["get", "point_count"],
        "#51bbd6",
        100,
        "#f1f075",
        750,
        "#f28cb1"
      ],
      "circle-radius": [
        "step",
        ["get", "point_count"],
        20,
        100,
        30,
        750,
        40
      ]
    }
  },
  "pvroof_cluster_count": {
    "type": "symbol",
    "filter": ["has", "point_count"],
    "layout": {
      "text-field": "{point_count_abbreviated}",
      "text-font": ["DIN Offc Pro Medium", "Arial Unicode MS Bold"],
      "text-size": 12
    }
  },
  "pvground": {
    "type": "circle",
    "paint": {
      "circle-color": "#F6B93B",
      "circle-opacity": 0.5,
      "circle-radius": [
        "*",
        5,
        [
          "log10",
          [
            "get",
            "capacity_net"
          ]
        ]
      ],
      "circle-stroke-width": [
        "case",
        [
          "boolean",
          [
            "get",
            "geometry_approximated"
          ],
          false
        ],
        0,
        1
      ]
    }
  },
  "hydro": {
    "type": "circle",
    "paint": {
      "circle-color": "#9CC4D9",
      "circle-opacity": 0.5,
      "circle-radius": [
        "*",
        5,
        [
          "log10",
          [
            "get",
            "capacity_net"
          ]
        ]
      ],
      "circle-stroke-width": [
        "case",
        [
          "boolean",
          [
            "get",
            "geometry_approximated"
          ],
          false
        ],
        0,
        1
      ]
    }
  },
  "biomass": {
    "type": "circle",
    "paint": {
      "circle-color": "#52C41A",
      "circle-opacity": 0.5,
      "circle-radius": [
        "*",
        5,
        [
          "log10",
          [
            "get",
            "capacity_net"
          ]
        ]
      ],
      "circle-stroke-width": [
        "case",
        [
          "boolean",
          [
            "get",
            "geometry_approximated"
          ],
          false
        ],
        0,
        1
      ]
    }
  },
  "combustion": {
    "type": "circle",
    "paint": {
      "circle-color": "#1A1A1A",
      "circle-opacity": 0.5,
      "circle-radius": [
        "*",
        5,
        [
          "log10",
          [
            "get",
            "capacity_net"
          ]
        ]
      ],
      "circle-stroke-width": [
        "case",
        [
          "boolean",
          [
            "get",
            "geometry_approximated"
          ],
          false
        ],
        0,
        1
      ]
    }
  },
  "results": {
    "type": "fill",
    "paint": {
      "fill-color": [
        "interpolate",
        [
          "linear"
        ],
        [
          "feature-state",
          "value"
        ],
        0.3,
        "#fef0d9",
        0.6,
        "#fdcc8a",
        0.8,
        "#fc8d59",
        0.9,
        "#e34a33",
        1,
        "#b30000"
      ],
      "fill-opacity": 0.8
    }
  }
}
