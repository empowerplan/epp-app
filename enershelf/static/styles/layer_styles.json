{
  "region-line": {
    "type": "line",
    "paint": {
      "line-color": "rgb(250, 174,29)",
      "line-width": [
        "case",
        [
          "boolean",
          [
            "feature-state",
            "hover"
          ],
          false
        ],
        3,
        0.25
      ]
    }
  },
  "region-fill": {
    "type": "fill",
    "paint": {
      "fill-color": "rgb(250,174,29)",
      "fill-opacity": [
        "case",
        [
          "boolean",
          [
            "feature-state",
            "hover"
          ],
          false
        ],
        0,
        0.1
      ]
    }
  },
  "region-label": {
    "type": "symbol",
    "layout": {
      "text-variable-anchor": [
        "center",
        "top"
      ],
      "text-radial-offset": 2,
      "text-field": "{name}",
      "text-font": [
        "Flexo Medium"
      ],
      "text-letter-spacing": 0.04
    },
    "paint": {
      "text-color": [
        "case",
        [
          "boolean",
          [
            "feature-state",
            "hover"
          ],
          false
        ],
        "#222222",
        "#000000"
      ],
      "text-halo-color": "hsl(0, 0%, 100%)",
      "text-halo-width": 0.85,
      "text-halo-blur": 1.5
    }
  },
  "grid": {
    "type": "line",
    "paint": {
      "line-color": "rgb(0, 100, 0)",
      "line-width": 2
    }
  },
  "nightlight": {
    "type": "fill",
    "paint": {
      "fill-color": "rgb(0, 0, 0)",
      "fill-opacity": 0.8
    }
  },
  "built_up_areas": {
    "type": "fill",
    "paint": {
      "fill-color": "rgb(100, 200, 100)",
      "fill-opacity": 0.8
    }
  },
  "settlements": {
    "type": "fill",
    "paint": {
      "fill-color": "rgb(150, 200, 100)",
      "fill-opacity": 0.8
    }
  },
  "hamlets": {
    "type": "fill",
    "paint": {
      "fill-color": "rgb(200, 200, 100)",
      "fill-opacity": 0.8
    }
  },
  "hospitals": {
    "type": "symbol",
    "layout": {
      "icon-image": "hospital",
      "icon-size": 0.5
    }
  },
  "simulated_hospitals": {
    "type": "symbol",
    "layout": {
      "icon-image": "hospital",
      "icon-size": 1.0
    }
  },
  "solar": {
    "continuous": "True",
    "from": [255, 255, 0],
    "to": [255, 0, 0]
  }
}
